@model Project
<section class="page-header-section">
    <div class="container">
        <div class="row text-center">
            <div class="col-12">
                <h1 class="page-header">Forest House</h1>
                <div class="line mt-3">
                    <div></div>
                </div>
            </div>
        </div>
    </div>
</section>
<section id="singleProject" class="p-0">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-7 col-md-6 order-2 order-md-1 image p-0">
                <img src="~/img/@Model.MainImageUrl" class="img-fluid h-100" style="object-fit: cover;">
            </div>
            <div class="col-xl-5 col-md-6 order-1 order-md-2 content">
                <div class="line mb-3 text-center text-md-left d-none d-md-block">
                    <div></div>
                </div>
                <h3 class="section-header mb-0 text-center text-md-left">
                    @Model.Name
                </h3>
                <p class="section-short-paragraphs my-4">
                    @Model.MainTitle
                </p>
                <div class="information">
                    <ul>
                        <li>
                            <p class="left">Total area: </p>
                            <p class="right">@Model.TotalArea m</p>
                        </li>
                        <li>
                            <p class="left">Floors: </p>
                            <p class="right">@Model.Floors</p>
                        </li>
                        <li>
                            <p class="left">Living rooms: </p>
                            <p class="right">@Model.LivingRooms</p>
                        </li>
                        <li>
                            <p class="left">Construction period:</p>
                            <p class="right">@Model.ConstructionPeriod months</p>
                        </li>
                        <li>
                            <p class="left">Date:</p>
                            <p class="right">@Model.Year</p>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</section>
<section id="projectPlan">
    <div class="container">
        <div class="row">
            <div class="col-12 text-center">
                <h3 class="section-header mb-0">
                    Plan
                </h3>
            </div>
            <div class="col-12 plan-image text-center p-5 mt-5" style="background-color: #f8f8fb;">
                <img src="~/img/@Model.PlanImgUrl" class="img-fluid">
            </div>
        </div>
    </div>
</section>
@if (Model.ProjectDetailImages.Count() > 0)
{
    <section id="gallery" class="p-0">
        <div class="container">
            <div class="row mb-5 pb-3">
                <div class="col-12 text-center">
                    <h3 class="section-header mb-0">
                        Gallery
                    </h3>
                </div>
            </div>
            <div class="content">
                <div class="galleria">
                    @foreach (var detailImg in Model.ProjectDetailImages)
                    {
                        <a href="~/img/@detailImg.ImageUrl">
                            <img src="~/img/@detailImg.ImageUrl">
                        </a>
                    }
                </div>
            </div>
        </div>
    </section>
}
@section Scripts{
    <!-- load jQuery -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.1/jquery.js"></script>

    <!-- load Galleria -->
    <script src="~/js/galleria.js"></script>
    <script src="~/js/galleria.folio.js"></script>
    <script>
        $(function () {
            // Load the Folio theme
            Galleria.loadTheme('galleria.folio.js');

            // Initialize Galleria
            Galleria.run('.galleria');
        });
    </script>
}
@section Links{
    <link rel="stylesheet" href="~/css/galleria.folio.css">
    <style>
        /* Demo styles */
        .content {
            color: #777;
            font: 12px/1.4 "helvetica neue", arial, sans-serif;
            max-width: 820px;
            margin: 20px auto;
        }

        h1 {
            font-size: 12px;
            font-weight: normal;
            color: #222;
            margin: 0;
        }

        p {
            margin: 0 0 20px
        }

        a {
            color: #22BCB9;
            text-decoration: none;
        }

        .galleria-info-description a {
            color: #bbb;
        }

        .cred {
            margin-top: 20px;
            font-size: 11px;
        }

        .galleria {
            height: 432px;
            max-width: 820px;
        }
    </style>
}